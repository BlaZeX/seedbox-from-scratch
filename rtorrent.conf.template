description "ncurses BitTorrent client based on LibTorrent"
start on stopped rc RUNLEVEL=[2345]
stop on runlevel [016]

chdir /home/<username>
script
  su <username> -c "screen -d -m -S rtorrent rtorrent"
  sleep 3
  su <username> -c "screen -d -m -S irssi irssi"
  sleep 3
  su <username> -c "screen -dmS sabnzbd sabnzbdplus"

  if [ ! "/tmp" = "<jaildir>/tmp" ]; then
    sleep 3
    sudo mount --bind /tmp <jaildir>/tmp
    sleep 3
    sudo mount --bind /var/www/rutorrent <jaildir>/var/www/rutorrent
  fi
end script

